<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_admin_app.Views.DashboardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Orientation="Horizontal" Padding="10" BackgroundColor="LightGray">
            <Image Source="grap_logo.png" HeightRequest="50" VerticalOptions="Center"/>
            <Label Text="Hi Admin" VerticalOptions="Center" HorizontalOptions="EndAndExpand" Margin="10,0"/>
            <Image Source="admin_profile_pic.png" HeightRequest="50" WidthRequest="50" VerticalOptions="Center" 
                   HorizontalOptions="End" Aspect="AspectFill" CornerRadius="25"/>
        </StackLayout>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30%"/>
                <ColumnDefinition Width="70%"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side Navigation -->
            <StackLayout BackgroundColor="LightBlue" Padding="10">
                <Button Text="Open" />
                <Button Text="Close" />
                <Button Text="Dashboard" />
                <Button Text="Settings" />
                <Button Text="Logout" />
            </StackLayout>

            <!-- Dynamic Content Area -->
            <ContentView Grid.Column="1" BackgroundColor="White">
                <!-- Placeholder for dynamic content -->
            </ContentView>
        </Grid>

        <!-- Footer -->
        <StackLayout Grid.Row="2" BackgroundColor="LightGray" Padding="10">
            <Label Text="Footer Content" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>