<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_admin_app.Views.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" BackgroundColor="LightGray" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Source="grap_logo.png" HeightRequest="40" VerticalOptions="Center" />
            <Label Text="Hi Admin" VerticalOptions="Center" HorizontalOptions="EndAndExpand" />
            <Image Source="admin_profile_pic.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center" HorizontalOptions="End" 
                   Aspect="AspectFill" CornerRadius="20" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30%" />
                <ColumnDefinition Width="70%" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0" BackgroundColor="LightBlue" Padding="10">
                <Button Text="Open" />
                <Button Text="Close" />
                <Button Text="Dashboard" />
                <Button Text="Settings" />
                <Button Text="Logout" />
            </StackLayout>

            <StackLayout Grid.Column="1" Padding="10">
                <Label Text="Dynamic Content Area" FontSize="Large" />
                <!-- Placeholder for dynamic content -->
            </StackLayout>
        </Grid>

        <Grid Grid.Row="2" BackgroundColor="LightGray" Padding="10">
            <Label Text="Footer Content" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>