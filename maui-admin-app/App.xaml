<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="maui_admin_app.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <OnPlatform x:TypeArguments="ResourceDictionary">
                    <On Platform="Android" Value="Resources/Styles/Colors.xaml" />
                    <On Platform="iOS" Value="Resources/Styles/Colors.xaml" />
                    <On Platform="MacCatalyst" Value="Resources/Styles/Colors.xaml" />
                    <On Platform="Windows" Value="Resources/Styles/Colors.xaml" />
                </OnPlatform>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>